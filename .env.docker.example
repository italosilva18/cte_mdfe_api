# ===================================
# CONFIGURAÇÃO DOCKER - CT-e/MDF-e API
# ===================================
# Copie este arquivo para .env e ajuste os valores

# Django Settings
DJANGO_SECRET_KEY=your-very-secure-secret-key-change-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,www.your-domain.com

# PostgreSQL Database
POSTGRES_DB=cte_mdfe_db
POSTGRES_USER=cte_mdfe_user
POSTGRES_PASSWORD=your_very_secure_db_password_here

# Django Superuser (criado automaticamente)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
DJANGO_SUPERUSER_PASSWORD=your_secure_admin_password

# Email Configuration (para alertas e notificações)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security Settings (importante para produção)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Rate Limiting
THROTTLE_ANON_RATE=100/hour
THROTTLE_USER_RATE=1000/hour

# JWT Token Settings
ACCESS_TOKEN_LIFETIME=60  # minutos
REFRESH_TOKEN_LIFETIME=7  # dias

# File Upload Settings
MAX_UPLOAD_SIZE=104857600  # 100MB em bytes
ALLOWED_UPLOAD_EXTENSIONS=.xml,.pdf,.jpg,.jpeg,.png

# Timezone and Language
TIME_ZONE=America/Sao_Paulo
LANGUAGE_CODE=pt-br

# Logging
LOG_LEVEL=INFO

# Backup Settings
BACKUP_RETENTION_DAYS=30

# SSL Certificate Paths (quando usar HTTPS)
# SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
# SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# External Services (opcional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Celery Settings (para tarefas assíncronas)
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0