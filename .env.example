# ===================================
# CONFIGURAÇÃO DO AMBIENTE - PRODUÇÃO
# ===================================
# Copie este arquivo para .env e ajuste os valores conforme necessário

# Django Settings
DJANGO_SECRET_KEY=your-very-secret-key-here-change-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-vps-ip

# Database Configuration
# Para PostgreSQL (recomendado para produção):
DB_ENGINE=django.db.backends.postgresql
DB_NAME=cte_mdfe_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Para MySQL (alternativa):
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=cte_mdfe_db
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=3306

# CORS Settings (ajuste conforme seu frontend)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Media Files
MEDIA_ROOT=/var/www/cte_mdfe_api/media
STATIC_ROOT=/var/www/cte_mdfe_api/static

# Security Settings (importante para produção)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Email Configuration (para envio de alertas)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/cte_mdfe_api/app.log

# Sentry (monitoramento de erros - opcional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Redis (para cache e filas - opcional)
# REDIS_URL=redis://localhost:6379/0

# Timezone and Language
TIME_ZONE=America/Sao_Paulo
LANGUAGE_CODE=pt-br

# API Rate Limiting
THROTTLE_ANON_RATE=100/hour
THROTTLE_USER_RATE=1000/hour

# JWT Token Settings
ACCESS_TOKEN_LIFETIME=60  # minutos
REFRESH_TOKEN_LIFETIME=7  # dias

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB em bytes
ALLOWED_UPLOAD_EXTENSIONS=.xml,.pdf,.jpg,.jpeg,.png